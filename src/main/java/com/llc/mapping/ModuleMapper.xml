<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.llc.dao.ModuleDao">
    <resultMap id="ModuleInfoMap" type="com.llc.model.moduleInfo" >
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="member_id" property="member_id" jdbcType="VARCHAR"/>
        <result column="time" property="time" jdbcType="VARCHAR" />
        <result column="module" property="module" jdbcType="VARCHAR" />
        <result column="usedTime" property="usedTime" jdbcType="VARCHAR"/>
        <result column="content" property="content" jdbcType="VARCHAR" />
    </resultMap>

    <sql id="Module_Column_List">
        member_id, time, module, usedTime, content
    </sql>
    <select id="getModuleInfo" resultMap="ModuleInfoMap" parameterType="java.lang.String">
        SELECT <include refid="Module_Column_List"/> from stat_module where member_id=#{member_id}
        AND time LIKE #{date} order by time
    </select>

    <select id="getUsedTime" resultType="java.lang.String" parameterType="java.lang.String">
        SELECT usedTime from stat_module where member_id=#{member_id} AND
        time LIKE #{date} AND content like '%usedTime%' order by time
    </select>
</mapper>